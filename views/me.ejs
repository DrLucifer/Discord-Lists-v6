 <%- include('./templates/header.ejs') %>
 <%- include('./templates/nav.ejs') %> 

<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        <%- include("templates/header") %>


    <title>Discord Lists | Hello <%= user.username %></title>
  </head>
  <body><br><br><br>
    <center><img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>" class="rounded" alt="..."></center>
    <center><h1 class="usernameDiscriminator"><%= user.username %>#<%= user.discriminator %></h1></center><br>
    <center><a   href="/addbot"><button class="button-main"><i class="fas fa-plus"></i> Add Bot </button></a></center><br>
    
    <% if(userHasAccessToStaffPanel){ %>
    <center><a   href="/staffpanel"><button class="button-main"><i class="fas fa-crown"></i> Staff Panel </button></a></center><br>
  <% } %>
    <center><a   href="/"><button class="button-main"><i class="fas fa-home"></i> Return Home </button></a></center><br><br>

    <div class="secondary-bg p-4">
      <% bots.forEach(function(bot) { %>
      <div class="center-flex">
      <img src="<%=bot.botavatar%>" alt="avatar"/>
      </div>
      <div class="center-flex">
      <h3><%=bot.botname%><h3>
      </div>
      <div class="center-flex">
                  <a href="/bot/<%= bot.botid %>"><button class="button-main"><i class="fas fa-eye"></i> View </button></a>
            <a href="/bot/<%= bot.botid %>/edit" ><button class="button-main"><i class="fas fa-pencil-alt"></i> Edit </button></a>
                       <a href="/bot/<%= bot.botid %>/Certification" > <button class="button-main" style="background:#1FD78D"><i class="fas fa-check-circle"></i>  Certification </button></a>
           <a href="/bot/<%= bot.botid %>/delete" > <button class="button-main" style="background:#F62451"><i class="fas fa-trash"></i> Delete </button></a>
      </div>
    </div>
    <% }); %>
   </div><br><br>
 <%- include('./templates/footer.ejs') %> 